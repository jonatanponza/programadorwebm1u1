{{!-- formulario para modificar --}}

<div class="container" style="margin: 100px 10px;">

    <div class="row">
        <h2>Modificar entrada:</h2>
    </div>

    <form action="/admin/novedades/modificar" method="post">
        <div class="row">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="col">
                <input type="text" class="form-control" placeholder="Nombre del viaje" aria-label="" name="titulo"
                    value="{{novedad.titulo}}">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" placeholder="Precio" aria-label="" name="precio"
                    value="{{novedad.precio}}">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="Fecha" aria-label="" name="fecha"
                    value="{{novedad.fecha}}">
            </div>
        </div>
        <div class="row container" style="margin-top: 25px;">
            <div class="col">
                <textarea name="cuerpo" id="" cols="55" rows="10"
                    placeholder="Agregar descripciÃ³n">{{novedad.cuerpo}}</textarea>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Modificar</button>
        </div>
    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
</div>